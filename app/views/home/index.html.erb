<%= render 'menu' %>
<div id='top-wrapper'>
  <div class='container' id='intro'>
    <section class='main'>
      <article id='intro'>
        <header>
          <h1>
            <%= t('intro.title').html_safe %>
          </h1>
        </header>
        <p><%= t('intro.one') %></p>
        <p><%= t('intro.two') %></p>
        <p><%= t('intro.three') %></p>
      </article>
      <aside id='intro_img'>
        
      </aside>
      
      <!--- Begin slider -->
      <div id='slides_wrapper'>
      <div id="slides">
				<div class="slides_container">
				  <div class="slide">
				    <%= image_tag 'slide-1.jpg' %>
				    <p class='caption'>飞哥和李锦记的传人在一起</p>
			    </div>
				  <div class="slide">
				    <%= image_tag 'slide-2.jpg' %>
				    <p class='caption'>飞哥潮装接受电视台采访</p>
			    </div>
				  <div class="slide">
				    <%= image_tag 'slide-3.jpg' %>
				    <p class='caption'>飞哥吃喝玩乐全接触！</p>
			    </div>
				</div>
				
				<a href="#" class="prev"><%= image_tag 'arrow-prev.png' %></a>
				<a href="#" class="next"><%= image_tag 'arrow-next.png' %></a>
			</div>
			</div>
      
      <!--- End slider -->
    </section>
  </div>
</div>

<div id='mid-wrapper'>
  <div class='container' id='poster'>
    <section class='main'>
      <div class='poster' id='poster1'>
        <h1><%= image_tag 'post1-title.png' %></h1>
        <p><%= t('poster.one') %></p>
      </div>
      <div class='poster' id='poster2'>
        <h1><%= image_tag 'post2-title.png' %></h1>
        <p><%= t('poster.two') %></p>
      </div>
      <div class='poster' id='poster3'>
        <h1><%= image_tag 'post3-title.png' %></h1>
        <p>
          <iframe width="100%" height="550" class="share_self"  frameborder="0" scrolling="no" src="http://widget.weibo.com/weiboshow/index.php?language=zh_cn&width=0&height=550&fansRow=2&ptype=0&speed=0&skin=5&isTitle=0&noborder=0&isWeibo=1&isFans=0&uid=2383482892&verifier=294c9662&dpc=1"></iframe>
          </p>
      </div>
    </section>
  </div>
</div>

<div id='bottom-wrapper'>
  <div class='container' id='contact'>
    <section class='main'>
      <header>
        <h1></h1>
        <ul>
          <li class='address'>成都电视台</li>
          <li class='email'>feige@ucheke.com</li>
        </ul>
      </header>
      <h1 class='comment-form-header'></h1>
      <%= form_tag '/mail', :id => 'comment-form', :remote => true do %>
        <%= text_field_tag :username %>
        <%= text_field_tag :email %>
        <%= button_tag 'Send' %>
        <%= text_area_tag :content %>
      <% end %>
    </section>
  </div>
</div>

<div id='foot-wrapper'>
  <div class='container'>
    <p>
      COPYRIGHT © 2012 HEYOOK WEBDESIGN. ALL RIGHTS RESERVED
    </p>
  </div>
</div>
